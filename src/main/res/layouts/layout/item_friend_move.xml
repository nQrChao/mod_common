<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/idp_45"
        android:background="@drawable/item_click_selector"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/idp_10">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/check"
            android:layout_width="@dimen/idp_30"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:enabled="false"
            app:buttonCompat="@drawable/checkbox_around_selector" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/idp_10"
            android:layout_toEndOf="@id/check"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1111111"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/check"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/move"
            android:layout_width="@dimen/idp_20"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/idp_10"
            android:src="@drawable/brav_move"
            app:buttonCompat="@drawable/checkbox_around_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            style="@style/HorizontalLineStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/name" />

    </RelativeLayout>
</layout>

