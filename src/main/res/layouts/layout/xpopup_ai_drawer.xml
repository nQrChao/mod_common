<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="@dimen/idp_220"
        android:layout_height="match_parent"
        android:background="#001428"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/idp_10">

        <com.chaoji.im.ui.view.ClearEditText
            android:id="@+id/search_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/idp_35"
            android:layout_marginTop="@dimen/idp_50"
            android:background="@drawable/bg_search_around"
            android:drawableStart="@drawable/search_ic"
            android:drawablePadding="@dimen/idp_8"
            android:hint="请输入搜索内容"
            android:inputType="text"
            android:lines="1"
            android:paddingLeft="@dimen/idp_10"
            android:paddingRight="@dimen/idp_10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/text_hit_color"
            android:textSize="@dimen/isp_13"
            app:bar_rightTextColor="@color/tab_default_color" />

        <TextView
            android:id="@+id/new_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/idp_35"
            android:layout_below="@id/search_edit"
            android:layout_marginTop="@dimen/idp_20"
            android:background="@drawable/button_around_green_selector"
            android:gravity="center"
            android:text="新建对话"
            android:textColor="@color/white90"
            android:textSize="@dimen/isp_13" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_btn"
            android:layout_marginTop="@dimen/idp_10"
            android:layout_marginBottom="@dimen/idp_55"
            android:orientation="vertical"
            tools:itemCount="20"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_friend" />


        <View
            android:id="@+id/view3"
            style="@style/HorizontalLineStyle"
            android:layout_above="@id/clear"
            android:layout_marginBottom="@dimen/idp_10" />


        <com.chaoji.im.ui.view.DrawableTextView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:drawableStart="@drawable/del_chat_ic"
            android:drawablePadding="@dimen/idp_5"
            android:gravity="bottom"
            android:paddingBottom="@dimen/idp_10"
            android:text="清除所有历史记录"
            android:textColor="#059953"
            android:textSize="@dimen/isp_15"
            android:textStyle="bold" />

    </RelativeLayout>
</layout>

