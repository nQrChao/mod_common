<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_settingbar_top_selector"
    android:orientation="vertical"
    android:paddingTop="@dimen/idp_20"
    android:paddingBottom="@dimen/idp_20">

    <com.box.common.ui.view.ClearEditText
        android:id="@+id/search_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/idp_10"
        android:layout_weight="1"
        android:background="@drawable/bg_search"
        android:drawableStart="@drawable/search_ic"
        android:drawablePadding="@dimen/idp_8"
        android:hint="请输入搜索内容"
        android:inputType="text"
        android:lines="1"
        android:paddingHorizontal="@dimen/idp_15"
        android:paddingVertical="@dimen/idp_5"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/text_hit_color"
        android:textSize="@dimen/isp_13" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginHorizontal="@dimen/idp_10"
        android:layout_marginTop="@dimen/idp_10"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:itemCount="2"
        tools:listitem="@layout/item_serch_location" />

</LinearLayout>