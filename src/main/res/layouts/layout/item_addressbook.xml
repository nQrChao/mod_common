<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_selector"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/idp_25"
            android:background="@color/colorGray"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/idp_10"
            android:text="A"
            android:textColor="@android:color/black"
            android:textSize="@dimen/isp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/idp_60"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.box.common.ui.widget.AvatarImage
                android:id="@+id/item_friend_icon"
                android:layout_width="@dimen/idp_40"
                android:layout_height="@dimen/idp_40"
                android:layout_marginVertical="@dimen/idp_10"
                android:layout_marginStart="@dimen/idp_10"
                app:TSize="@dimen/isp_13"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_friend_check"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/idp_10"
                android:text="这是联系人备注"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/isp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_friend_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_friend_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/idp_10"
                android:text="(这是联系人名字)"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/isp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_friend_name"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/idp_15"
                android:background="@drawable/common_btn_sure_background"
                android:paddingStart="@dimen/idp_10"
                android:paddingTop="@dimen/idp_5"
                android:paddingEnd="@dimen/idp_10"
                android:paddingBottom="@dimen/idp_5"
                android:text="移除"
                android:textColor="@color/white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/item_friend_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/item_friend_name" />


        </LinearLayout>

        <View
            android:id="@+id/view3"
            style="@style/HorizontalLineStyle" />
    </LinearLayout>
</layout>

