<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingVertical="@dimen/idp_5">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_home_navigation_icon"
        android:layout_width="@dimen/idp_22"
        android:layout_height="@dimen/idp_22"
        tools:srcCompat="@drawable/nav_btn1_selector" />

    <com.chaoji.other.hjq.shape.view.ShapeTextView
        android:id="@+id/tv_home_navigation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/idp_2"
        android:textSize="@dimen/isp_12"
        app:shape_textColor="#A4A4A4"
        app:shape_textSelectedColor="@color/common_accent_color"
        tools:text="@string/bottom_name1" />

</LinearLayout>