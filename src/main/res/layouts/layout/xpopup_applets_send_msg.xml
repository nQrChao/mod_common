<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_settingbar_top_selector"
    android:orientation="vertical"
    android:paddingTop="@dimen/idp_10"
    android:paddingBottom="@dimen/idp_10">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/idp_20"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingBottom="@dimen/idp_5"
        android:text="发送给:"
        android:textColor="@color/text_default_color"
        android:textSize="@dimen/isp_16"
        android:textStyle="bold" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/idp_20"
            android:orientation="vertical"
            android:paddingTop="@dimen/idp_10">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:itemCount="3"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_user_simple" />

            <com.box.common.ui.widget.ViewLinearLayoutIntercept
                android:id="@+id/content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/idp_10"
                android:background="@drawable/sty_radius_unleft_stroke_30"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:maxWidth="@dimen/idp_220"
                android:minWidth="@dimen/idp_220"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/idp_10"
                android:paddingVertical="@dimen/idp_5">

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="小程序名称"
                    android:textColor="@color/common_text_color_black"
                    android:textSize="@dimen/isp_12"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/applets_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/idp_80"
                    android:layout_marginVertical="@dimen/idp_10"
                    android:src="@drawable/status_empty_ic" />


                <View style="@style/common_divider" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/idp_5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/applets_icon"
                        android:layout_width="@dimen/idp_15"
                        android:layout_height="@dimen/idp_15"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/applets_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/idp_10"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="小程序"
                        android:textColor="@color/text_hit_color"
                        android:textSize="@dimen/isp_11" />

                </LinearLayout>

            </com.box.common.ui.widget.ViewLinearLayoutIntercept>

            <com.box.common.ui.view.ClearEditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/idp_30"
                android:background="@drawable/common_ai_background"
                android:hint="留言"
                android:inputType="text"
                android:lines="1"
                android:paddingHorizontal="@dimen/idp_10"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hit_color"
                android:textSize="@dimen/isp_14" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/xpopup_divider1"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginHorizontal="@dimen/idp_20"
        android:layout_marginTop="@dimen/idp_10"
        android:background="@color/_xpopup_list_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/idp_40"
        android:layout_marginTop="@dimen/idp_10"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/idp_20"
            android:layout_marginEnd="@dimen/idp_8"
            android:layout_weight="1"
            android:background="@drawable/btn_cancel_selector"
            android:gravity="center"
            android:paddingVertical="@dimen/idp_10"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="@dimen/isp_14" />

        <View
            android:id="@+id/xpopup_divider2"
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/_xpopup_list_divider"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/idp_8"
            android:layout_marginEnd="@dimen/idp_20"
            android:layout_weight="1"
            android:background="@drawable/button_circle_selector"
            android:gravity="center"
            android:paddingVertical="@dimen/idp_10"
            android:text="确定"
            android:textColor="@color/white95"
            android:textSize="@dimen/isp_14" />
    </LinearLayout>
</LinearLayout>