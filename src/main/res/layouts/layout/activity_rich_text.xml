<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.box.other.blankj.utilcode.util.StringUtils" />

        <variable
            name="vm"
            type="com.box.common.ui.activity.CommonActivityRichText.Model" />

        <variable
            name="click"
            type="com.box.common.ui.activity.CommonActivityRichText.ProxyClick" />
    </data>

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.box.other.hjq.titlebar.TitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/idp_40"
            android:background="@color/common_bg_color"
            android:gravity="center"
            app:leftIcon="@drawable/arrows_left_b_ic"
            app:leftTitleColor="@color/black90"
            app:leftTitleSize="@dimen/isp_17"
            app:leftTitleStyle="bold"
            app:lineVisible="true"
            app:titleColor="@color/black90"
            app:titleSize="@dimen/isp_16"
            app:titleStyle="bold" />

        <RelativeLayout
            android:id="@+id/parentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/hot_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/idp_10"
                android:visibility="@{vm.hotCount != `-1` ? View.VISIBLE : View.GONE}">

                <ImageView
                    android:layout_width="@dimen/idp_18"
                    android:layout_height="@dimen/idp_18"
                    android:src="@drawable/mod_ic_fire" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/idp_8"
                    android:text="热度值："
                    android:textSize="@dimen/isp_13" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.hotCount}"
                    android:textColor="#FF3F3F"
                    android:textStyle="bold"
                    android:textSize="@dimen/isp_13"
                    tools:text="321" />

            </LinearLayout>

            <com.box.common.ui.view.BrowserView
                android:id="@+id/richWebview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/hot_layout"
                android:background="@color/white" />

        </RelativeLayout>
    </LinearLayout>

</layout>