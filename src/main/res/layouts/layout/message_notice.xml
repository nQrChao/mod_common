<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/noticeAvatar"
                android:layout_width="@dimen/idp_40"
                android:layout_height="@dimen/idp_40" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/idp_8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/noticeNickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系统通知"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/isp_12"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/idp_2"
                    android:background="@drawable/sty_radius_unleft_white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/idp_15"
                    android:paddingTop="@dimen/idp_10"
                    android:paddingRight="@dimen/idp_15"
                    android:paddingBottom="@dimen/idp_10">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="系统通知"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/isp_16" />

                    <TextView
                        android:id="@+id/content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/idp_5"
                        android:text="文字"
                        android:textColor="#ff666666"
                        android:textSize="@dimen/isp_12"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/idp_5"
                        android:maxHeight="@dimen/idp_150"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</layout>