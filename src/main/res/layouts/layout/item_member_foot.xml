<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_selector"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/idp_5">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/idp_35"
            android:layout_height="@dimen/idp_35"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/idp_3"
            android:src="@drawable/del_chat_ic" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/idp_5"
            android:text="移除"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_12" />

    </LinearLayout>

</layout>