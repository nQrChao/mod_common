<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">

        <com.box.common.ui.widget.AvatarImage
            android:id="@+id/icon"
            android:layout_width="@dimen/idp_35"
            android:layout_height="@dimen/idp_35"
            android:layout_gravity="center_horizontal"
            app:TSize="@dimen/isp_13" />


        <TextView
            android:id="@+id/name"
            android:layout_width="@dimen/idp_45"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/idp_5"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="名字"
            android:textColor="@color/text_more_dialog_color"
            android:textSize="@dimen/isp_12" />

    </LinearLayout>
</layout>

