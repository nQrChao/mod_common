<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_xxx"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/idp_20"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingHorizontal="@dimen/idp_25"
                android:paddingTop="@dimen/idp_20"
                android:text=" "
                android:textColor="@color/white90"
                android:textSize="@dimen/isp_18" />

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:paddingHorizontal="@dimen/idp_25"
                android:paddingTop="@dimen/idp_20"
                android:text="？？？"
                android:textColor="@color/white90"
                android:textSize="@dimen/isp_18" />

            <TextView
                android:id="@+id/tv_title3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingHorizontal="@dimen/idp_25"
                android:paddingTop="@dimen/idp_20"
                android:text=" "
                android:textColor="@color/white90"
                android:textSize="@dimen/isp_18" />

        </LinearLayout>


        <com.chaoji.im.ui.view.ClearEditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/idp_30"
            android:layout_marginTop="@dimen/idp_10"
            android:layout_weight="1"
            android:background="@drawable/button_cancel_selector"
            android:drawableStart="@drawable/reboot_ic"
            android:drawablePadding="@dimen/idp_10"
            android:hint="请输入暗号"
            android:inputType="text"
            android:lines="1"
            android:paddingHorizontal="@dimen/idp_15"
            android:paddingVertical="@dimen/idp_5"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/text_hit_color"
            android:textSize="@dimen/isp_13" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/idp_20"
            android:text="2024-01-01 01:01:01"
            android:textColor="@color/white90"
            android:textSize="@dimen/isp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/idp_30"
            android:layout_marginTop="@dimen/idp_20"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/idp_20"
            android:weightSum="10">

            <Button
                android:id="@+id/a_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/idp_35"
                android:layout_marginEnd="@dimen/idp_20"
                android:layout_weight="5"
                android:background="@drawable/button_around_selector"
                android:gravity="center"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="@dimen/isp_13" />

            <Button
                android:id="@+id/b_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/idp_35"
                android:layout_marginStart="@dimen/idp_20"
                android:layout_weight="5"
                android:background="@drawable/button_apply_selector"
                android:gravity="center"
                android:text="B"
                android:textColor="@color/black80"
                android:textSize="@dimen/isp_13" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>