<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_selector"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/head_check"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/idp_10"
        android:background="@null"
        android:checked="true"
        android:visibility="gone"
        app:buttonCompat="@drawable/checkbox_around_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.chaoji.im.ui.widget.AvatarImage
        android:visibility="gone"
        android:id="@+id/head_icon"
        android:layout_width="@dimen/idp_40"
        android:layout_height="@dimen/idp_40"
        app:TSize="@dimen/isp_13"
        android:layout_marginVertical="@dimen/idp_10"
        android:layout_marginStart="@dimen/idp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/head_check"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/head_red_dot"
        android:layout_width="@dimen/idp_7"
        android:layout_height="@dimen/idp_7"
        android:layout_marginTop="@dimen/idp_5"
        android:layout_marginEnd="@dimen/idp_20"
        android:src="@drawable/reddot_"
        app:layout_constraintStart_toStartOf="@id/item_friend_apply_text_ll"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:paddingVertical="@dimen/idp_10"
        android:id="@+id/item_friend_apply_text_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/head_icon"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/idp_10"
            android:textStyle="bold"
            android:text="这是联系人名字"
            android:textColor="@color/tab_default_color"
            android:textSize="@dimen/isp_15" />

        <TextView
            android:visibility="gone"
            android:id="@+id/head_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/idp_10"
            android:text="这是申请的消息"
            android:textColor="@color/text_hit_color"
            android:textSize="@dimen/isp_12" />
    </LinearLayout>

    <ImageView
        android:id="@+id/right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/idp_10"
        android:gravity="center"
        android:src="@drawable/arrows_right_ic"
        android:textColor="@color/black"
        android:textSize="@dimen/isp_12"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:visibility="gone"
        android:id="@+id/head_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/idp_10"
        android:gravity="center"
        android:text="11-01"
        android:textColor="@color/black"
        android:textSize="@dimen/isp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:visibility="gone"
        android:id="@+id/head_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/idp_30"
        android:layout_marginEnd="@dimen/idp_10"
        android:background="@drawable/button_around_selector"
        android:gravity="center"
        android:text="通过"
        android:textColor="@color/white"
        android:textSize="@dimen/isp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view2"
        style="@style/HorizontalLineStyle"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

