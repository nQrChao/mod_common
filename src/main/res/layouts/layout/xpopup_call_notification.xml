<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_noti"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/idp_15"
        android:paddingTop="@dimen/idp_45"
        android:paddingBottom="@dimen/idp_15">

        <com.chaoji.im.ui.widget.AvatarImage
            android:id="@+id/user_icon"
            android:layout_width="@dimen/idp_45"
            android:layout_height="@dimen/idp_45"
            app:TSize="@dimen/isp_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/user_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/idp_10"
            android:layout_toEndOf="@id/user_icon"
            android:src="@drawable/login_type2"
            android:text="这是昵称"
            android:textColor="@color/white"
            android:textSize="@dimen/isp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_nick"
            android:layout_marginStart="@dimen/idp_10"
            android:layout_toEndOf="@id/user_icon"
            android:src="@drawable/login_type2"
            android:text="邀请你通话"
            android:textColor="#7B7B7B"
            android:textSize="@dimen/isp_14"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cancel_call"
            android:layout_width="@dimen/idp_40"
            android:layout_height="@dimen/idp_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/idp_20"
            android:layout_toStartOf="@id/take_call"
            android:gravity="center" />

        <ImageView
            android:id="@+id/take_call"
            android:layout_width="@dimen/idp_40"
            android:layout_height="@dimen/idp_40"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center" />


    </RelativeLayout>

</layout>