<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="payInfo"
            type="com.chaoji.im.data.model.PayInfo" />

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/idp_70"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:paddingHorizontal="@dimen/idp_10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/idp_35"
            android:layout_height="@dimen/idp_35"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            app:loadResImage="@{payInfo.icon}" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/idp_15"
            android:layout_marginTop="@dimen/idp_5"
            android:layout_toEndOf="@id/icon"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@{payInfo.name}"
            android:textStyle="bold"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_14" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/item_check"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/idp_40"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:checked="@{payInfo.isChoice}"
            android:gravity="center_vertical"
            app:buttonCompat="@drawable/checkbox_around_selector" />

        <View style="@style/HorizontalLineStyle"
            android:layout_marginBottom="@dimen/idp_2"
            android:layout_marginStart="@dimen/idp_50"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</layout>

