<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_settingbar_top_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_top_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="@dimen/idp_20">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/idp_20"
            android:layout_marginTop="@dimen/idp_10"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="@dimen/idp_5"
            android:text="超级AIM授权"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_16"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bottom_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="@dimen/idp_20">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/text_default_color"
            android:paddingVertical="@dimen/idp_10"
            android:text="xxx 申请获得以下权限："
            android:textSize="@dimen/isp_14" />

        <TextView
            android:id="@+id/content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="@dimen/idp_10"
            android:textColor="@color/text_hit_color"
            android:text="•  获得你的公开信息（昵称、头像等）"
            android:textSize="@dimen/isp_14" />

        <View
            android:id="@+id/xpopup_divider1"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginHorizontal="@dimen/idp_20"
            android:background="@color/_xpopup_list_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/idp_40"
            android:layout_marginTop="@dimen/idp_20"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/idp_20"
                android:layout_marginEnd="@dimen/idp_8"
                android:layout_weight="1"
                android:background="@drawable/btn_cancel_selector"
                android:gravity="center"
                android:paddingVertical="@dimen/idp_10"
                android:text="拒绝"
                android:textColor="#666666"
                android:textSize="@dimen/isp_14" />

            <View
                android:id="@+id/xpopup_divider2"
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:background="@color/_xpopup_list_divider"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/idp_8"
                android:layout_marginEnd="@dimen/idp_20"
                android:layout_weight="1"
                android:background="@drawable/button_circle_selector"
                android:gravity="center"
                android:paddingVertical="@dimen/idp_10"
                android:text="允许"
                android:textColor="@color/white95"
                android:textSize="@dimen/isp_14" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>