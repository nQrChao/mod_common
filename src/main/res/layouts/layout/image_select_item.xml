<?xml version="1.0" encoding="utf-8"?>
<com.box.common.ui.widget.ViewFrameLayoutRatio xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:sizeRatio="1:1">

    <com.box.common.ui.widget.ViewImageViewScale
        android:id="@+id/iv_image_select_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scaleType="centerCrop"
        tools:src="@drawable/logout_ic" />

    <FrameLayout
        android:id="@+id/fl_image_select_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingStart="@dimen/idp_20"
        android:paddingTop="@dimen/idp_3"
        android:paddingEnd="@dimen/idp_3"
        android:paddingBottom="@dimen/idp_20">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_image_select_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:buttonCompat="@drawable/checkbox_around_selector" />

    </FrameLayout>

</com.box.common.ui.widget.ViewFrameLayoutRatio>