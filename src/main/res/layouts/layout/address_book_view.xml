<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.chaoji.im.ui.view.ClearEditText
                android:id="@+id/search_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/idp_10"
                android:layout_marginTop="@dimen/idp_10"
                android:background="@drawable/bg_search"
                android:drawableStart="@drawable/search_ic"
                android:drawablePadding="@dimen/idp_8"
                android:hint="请输入搜索内容"
                android:inputType="text"
                android:lines="1"
                android:paddingHorizontal="@dimen/idp_15"
                android:paddingVertical="@dimen/idp_5"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hit_color"
                android:textSize="@dimen/isp_13"
                app:bar_rightTextColor="@color/tab_default_color" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/idp_10"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <com.chaoji.im.ui.widget.ViewWaveSideBar
            android:id="@+id/side_bar"
            android:layout_width="@dimen/idp_30"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/idp_10"
            app:sidebar_lazy_respond="false"
            app:sidebar_max_offset="@dimen/idp_10"
            app:sidebar_text_color="@color/colorAccent" />

    </RelativeLayout>
</layout>