<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/idp_10"
            android:layout_marginTop="@dimen/idp_5"
            android:layout_marginRight="@dimen/idp_10"
            android:layout_marginBottom="@dimen/idp_5"
            android:gravity="center_vertical">

            <com.box.common.ui.view.ClearEditText
                android:id="@+id/search_edit"
                android:layout_width="0dp"
                android:layout_height="@dimen/idp_40"
                android:layout_weight="1"
                android:background="@drawable/bg_search"
                android:drawableStart="@drawable/search_ic"
                android:drawablePadding="@dimen/idp_8"
                android:hint="请输入搜索内容"
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="@dimen/idp_10"
                android:paddingRight="@dimen/idp_10"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hit_color"
                android:textSize="@dimen/isp_13"
                app:bar_rightTextColor="@color/tab_default_color" />

            <TextView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/idp_10"
                android:text="搜索"
                android:textColor="#6493FA"
                android:textSize="@dimen/isp_14" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/idp_70"
            android:background="@color/colorGray"
            android:visibility="gone">

            <ImageView
                android:id="@+id/aiIcon"
                android:layout_width="@dimen/idp_40"
                android:layout_height="@dimen/idp_40"
                android:layout_marginStart="@dimen/idp_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/aiName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/idp_10"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/common_text_color_black"
                android:textSize="@dimen/isp_14"
                app:layout_constraintBottom_toBottomOf="@+id/aiIcon"
                app:layout_constraintStart_toEndOf="@+id/aiIcon"
                app:layout_constraintTop_toTopOf="@+id/aiIcon"
                tools:text="AI聊天（机器人）" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/line_size"
                android:background="@color/common_line_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/aiIcon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</layout>