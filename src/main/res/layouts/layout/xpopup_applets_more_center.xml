<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/a_rounded_top_white_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/idp_30"
            android:layout_height="@dimen/idp_30"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/idp_10"
            android:layout_marginVertical="@dimen/idp_10"/>

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/idp_10"
            android:layout_toEndOf="@id/icon"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="小程序"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_16"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/idp_20"
            android:layout_height="@dimen/idp_20"
            android:layout_alignParentEnd="true"
            android:paddingTop="@dimen/idp_10"
            android:paddingEnd="@dimen/idp_10"
            android:src="@drawable/close_black_ic" />

    </RelativeLayout>

    <View style="@style/HorizontalLineStyle2" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/a_rounded_bottom_b_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/idp_15"
                android:paddingVertical="@dimen/idp_8"
                android:text="分享给好友"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/isp_14"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/userRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/idp_10"
                tools:itemCount="1"
                tools:listitem="@layout/item_applets_user_list_h" />

            <View style="@style/HorizontalLineStyle2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shareRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="1"
                tools:listitem="@layout/item_applets_tool_list_h" />

            <View style="@style/HorizontalLineStyle2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/toolRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="1"
                tools:listitem="@layout/item_applets_tool_list_h" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>