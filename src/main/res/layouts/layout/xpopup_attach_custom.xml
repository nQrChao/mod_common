<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#333"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/idp_15"
        android:paddingVertical="@dimen/idp_10"
        android:text="说明 "
        android:textColor="#fff"
        android:textSize="@dimen/isp_14" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/idp_1"
        android:background="#eee" />

    <TextView
        android:layout_gravity="end"
        android:gravity="center"
        android:id="@+id/tv_comment"
        android:layout_width="@dimen/idp_60"
        android:layout_height="@dimen/idp_30"
        android:background="@drawable/button_apply_selector"
        android:layout_marginVertical="@dimen/idp_10"
        android:layout_marginHorizontal="@dimen/idp_15"
        android:text="去完成"
        android:textColor="@color/black"
        android:textSize="@dimen/isp_13" />
</LinearLayout>