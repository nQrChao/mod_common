<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:background="@drawable/common_color_white_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/idp_50"
            android:gravity="center"
            android:textColor="@color/common_text_color_black"
            android:textSize="@dimen/isp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1111" />

        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/idp_10"
            android:layout_weight="1"
            android:background="@color/common_white"
            android:padding="@dimen/idp_10"
            app:layout_constraintBottom_toTopOf="@+id/sure"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="@dimen/idp_50"
            android:layout_height="@dimen/idp_30"
            android:layout_marginEnd="@dimen/idp_15"
            android:layout_marginBottom="@dimen/idp_10"
            android:background="@drawable/common_btn_sure_background"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="@dimen/idp_50"
            android:layout_height="@dimen/idp_30"
            android:layout_marginEnd="@dimen/idp_15"
            android:background="@drawable/common_btn_cancel_background"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/sure"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sure"
            app:layout_constraintTop_toTopOf="@+id/sure" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>