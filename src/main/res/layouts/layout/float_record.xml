<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ViewRecordBind" />

    <LinearLayout
        android:id="@+id/recordRoot"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/idp_20"
        android:background="@drawable/bg_record"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recordIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="@dimen/idp_10"
            android:paddingEnd="@dimen/idp_1"
            android:src="@drawable/bg_record_stop" />

        <TextView
            android:id="@+id/recordTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:paddingStart="@dimen/idp_1"
            android:paddingEnd="@dimen/idp_10"
            android:textColor="@color/white90"
            android:textSize="12sp"
            tools:text="00:15" />
    </LinearLayout>

</layout>