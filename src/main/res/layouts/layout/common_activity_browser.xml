<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.box.common.ui.activity.CommonActivityBrowser.Model" />

        <variable
            name="click"
            type="com.box.common.ui.activity.CommonActivityBrowser.ProxyClick" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.box.other.hjq.titlebar.TitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/idp_40"
            android:background="@color/white"
            android:gravity="center"
            app:leftTitleColor="@color/black90"
            app:leftTitleSize="@dimen/isp_17"
            app:leftTitleStyle="bold"
            app:lineVisible="true"
            app:titleColor="@color/black90"
            app:titleSize="@dimen/isp_16"
            app:titleStyle="bold" />

        <ProgressBar
            android:id="@+id/pb_browser_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/idp_3"
            android:progressDrawable="@drawable/progress_gradient_bg"
            android:visibility="gone" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:paddingHorizontal="@dimen/idp_10"
            android:paddingVertical="@dimen/idp_5"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/textLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/isp_12"
                    tools:text="A" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <com.box.common.ui.layout.StatusLayout
            android:id="@+id/hl_browser_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.box.other.scwang.smart.refresh.layout.SmartRefreshLayout
                android:id="@+id/sl_browser_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srlEnableHeaderTranslationContent="false"
                app:srlEnableLoadMore="false"
                app:srlEnablePreviewInEditMode="false"
                app:srlPrimaryColor="#444444">

                <com.box.common.ui.view.BrowserView
                    android:id="@+id/wv_browser_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.box.other.scwang.smart.refresh.layout.SmartRefreshLayout>

        </com.box.common.ui.layout.StatusLayout>

    </LinearLayout>

</layout>