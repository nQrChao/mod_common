<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_settingbar_top_selector"
    android:orientation="vertical"
    android:paddingTop="@dimen/idp_30"
    android:paddingBottom="@dimen/idp_20">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/idp_20"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="1"
        android:paddingBottom="@dimen/idp_5"
        android:text="我是标题"
        android:textColor="@color/text_default_color"
        android:textSize="@dimen/isp_15" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/idp_20"
            android:orientation="vertical"
            android:paddingTop="@dimen/idp_10">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/idp_5"
                android:text="我是内容"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/isp_14"
                android:visibility="gone" />

            <com.box.common.ui.view.ClearEditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/idp_40"
                android:background="@null"
                android:maxLength="255"
                android:textColor="@color/_xpopup_content_color"
                android:textColorHint="#999999"
                android:textSize="@dimen/isp_14"
                tools:visibility="visible" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/xpopup_divider1"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginHorizontal="@dimen/idp_20"
        android:background="@color/_xpopup_list_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/idp_40"
        android:layout_marginTop="@dimen/idp_20"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/idp_20"
            android:layout_marginEnd="@dimen/idp_8"
            android:layout_weight="1"
            android:background="@drawable/btn_cancel_selector"
            android:gravity="center"
            android:paddingVertical="@dimen/idp_10"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="@dimen/isp_14" />

        <View
            android:id="@+id/xpopup_divider2"
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:background="@color/_xpopup_list_divider"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/idp_8"
            android:layout_marginEnd="@dimen/idp_20"
            android:layout_weight="1"
            android:background="@drawable/button_circle_selector"
            android:gravity="center"
            android:paddingVertical="@dimen/idp_10"
            android:text="确定"
            android:textColor="@color/white95"
            android:textSize="@dimen/isp_14" />
    </LinearLayout>
</LinearLayout>