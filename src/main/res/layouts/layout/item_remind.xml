<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="remindBean"
            type="com.chaoji.im.data.model.RemindBean" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/idp_45"
        android:background="@drawable/item_click_selector"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/idp_10">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/check"
            android:layout_width="@dimen/idp_30"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:checked="@{remindBean.select?true:false}"
            android:scaleX="0.9"
            android:scaleY="0.9"
            app:buttonCompat="@drawable/checkbox_fillet_selector" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/idp_10"
            android:layout_toEndOf="@id/check"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{remindBean.title}"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/check"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            style="@style/HorizontalLineStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/title" />

    </RelativeLayout>
</layout>

