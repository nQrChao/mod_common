<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ViewCallVoiceBind">

        <variable
            name="vm"
            type="com.box.common.ui.view.ViewCallVoiceModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_call_voice">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <com.box.common.ui.widget.AvatarImage
                app:TSize="@dimen/isp_30"
                android:layout_width="@dimen/idp_100"
                android:layout_height="@dimen/idp_100"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/idp_10"
                android:gravity="center_horizontal"
                android:text="这是名字"
                android:textColor="@color/white"
                android:textSize="@dimen/isp_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/idp_40"
                android:gravity="center_horizontal"
                android:text="等待对方接受邀请..."
                android:textColor="#A09F9A"
                android:textSize="@dimen/isp_18"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="@dimen/idp_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/idp_100"
                    android:layout_height="@dimen/idp_100"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="麦克风已开"
                    android:textColor="@color/white"
                    android:textSize="@dimen/isp_20"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</layout>