<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_selector"
        android:orientation="vertical">

        <com.chaoji.im.ui.widget.AvatarImage
            android:id="@+id/head_icon"
            android:layout_width="@dimen/idp_35"
            android:layout_height="@dimen/idp_35"
            app:TSize="@dimen/isp_12"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/idp_3" />

        <TextView
            android:id="@+id/head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_icon"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/idp_5"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="这是联系"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_12" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/idp_10"
            android:layout_marginStart="@dimen/idp_30"
            android:background="@drawable/group_title_ic_1"
            android:gravity="center"
            android:text="群主"
            android:textColor="@color/white"
            android:textSize="@dimen/isp_6" />

    </RelativeLayout>

</layout>