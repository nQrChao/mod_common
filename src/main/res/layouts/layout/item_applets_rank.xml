<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="applet"
            type="com.box.common.data.model.ModInfo" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/idp_60"
        android:background="@drawable/item_click_selector"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/isp_14"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/idp_40"
            android:layout_height="@dimen/idp_40"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/idp_10"
            app:loadRoundImage="@{applet.pic}" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/idp_5"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:text="@{applet.title}"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/isp_13" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/idp_5"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="1"
                android:text="@{applet.redirect}"
                android:textColor="@color/text_hit_color"
                android:textSize="@dimen/isp_12" />

        </LinearLayout>
    </LinearLayout>

</layout>