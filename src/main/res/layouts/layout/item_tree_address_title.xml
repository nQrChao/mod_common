<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F8FA"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/idp_5"
        android:paddingEnd="@dimen/idp_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/idp_10"
            android:paddingVertical="@dimen/idp_8">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="默认分组(1)"
                android:textColor="@android:color/black"
                android:textSize="@dimen/isp_14" />


            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/idp_22"
                android:layout_height="@dimen/idp_22"
                android:layout_gravity="right|center"
                android:src="@drawable/arrows_top_ic"
                android:tag="0"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>

        <View style="@style/HorizontalLineStyle2" />
    </LinearLayout>
</layout>