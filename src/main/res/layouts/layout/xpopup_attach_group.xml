<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_color_white_background"
        android:gravity="center"
        android:paddingVertical="@dimen/idp_15"
        android:paddingHorizontal="@dimen/idp_15"
        android:orientation="vertical">

        <com.box.common.ui.view.DrawableTextView
            android:id="@+id/dialog_group_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/add_group_ic"
            android:drawablePadding="@dimen/idp_5"
            android:gravity="center"
            android:text="发起群聊"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_14"
            app:drawableHeight="@dimen/idp_18"
            app:drawableWidth="@dimen/idp_18" />

        <View
            style="@style/HorizontalLineStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/idp_10"  />

        <com.box.common.ui.view.DrawableTextView
            android:id="@+id/dialog_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/add_group_ic2"
            android:drawablePadding="@dimen/idp_5"
            android:gravity="center"
            android:text="添加好友"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_14"
            app:drawableHeight="@dimen/idp_20"
            app:drawableWidth="@dimen/idp_20" />

        <View
            style="@style/HorizontalLineStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/idp_10" />

        <com.box.common.ui.view.DrawableTextView
            android:id="@+id/dialog_scan_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|start"
            android:drawableStart="@drawable/add_group_ic_3"
            android:drawablePadding="@dimen/idp_5"
            android:gravity="center"
            android:text="扫一扫"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_14"
            app:drawableHeight="@dimen/idp_20"
            app:drawableWidth="@dimen/idp_20" />

        <View
            style="@style/HorizontalLineStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/idp_10"  />

        <com.box.common.ui.view.DrawableTextView
            android:id="@+id/dialog_add_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/add_group_ic_1"
            android:drawablePadding="@dimen/idp_5"
            android:gravity="center"
            android:text="加入群聊"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_14"
            app:drawableHeight="@dimen/idp_20"
            app:drawableWidth="@dimen/idp_20" />


    </LinearLayout>
</layout>