<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.chaoji.other.huantansheng.easyphotos.ui.widget.PressedImageView
        android:id="@+id/iv_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/idp_1_5"
        android:scaleType="centerCrop"
        android:background="@color/easy_photos_bar_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_selector"
        android:layout_width="@dimen/idp_18"
        android:layout_height="@dimen/idp_18"
        android:layout_margin="@dimen/idp_8"
        android:background="@drawable/easy_photos_bg_select_true"
        android:gravity="center"
        android:textColor="@color/menu_text_easy_photos"
        android:textSize="@dimen/isp_12"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_selector"
        android:layout_width="@dimen/idp_45"
        android:layout_height="@dimen/idp_45"
        android:background="@color/transparent_easy_photos"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/idp_1_5"
        android:gravity="center"
        android:paddingBottom="@dimen/idp_3"
        android:paddingEnd="@dimen/idp_8"
        android:paddingStart="@dimen/idp_8"
        android:paddingTop="@dimen/idp_3"
        android:shadowColor="@color/easy_photos_bar_primary"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1.2"
        android:text="@string/gif_easy_photos"
        android:textColor="@color/easy_photos_fg_primary"
        android:textSize="@dimen/isp_12"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/iv_play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/idp_22"
        android:layout_height="@dimen/idp_22"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible"
        app:srcCompat="@drawable/easy_photos_ic_play" />

</androidx.constraintlayout.widget.ConstraintLayout>