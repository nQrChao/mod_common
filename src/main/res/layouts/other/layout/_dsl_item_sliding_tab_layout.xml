<?xml version="1.0" encoding="utf-8"?>
<com.box.other.tablayout.DslTabLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab_layout"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:background="#666466"
    app:tab_draw_badge="true"
    app:tab_indicator_drawable="@drawable/_dsl_indicator_bottom_line"
    app:tab_indicator_height="3dp">


    <TextView
        style="@style/_Dsl_TabSlidingItemStyle"
        android:text="最新" />


    <TextView
        style="@style/_Dsl_TabSlidingItemStyle"
        android:text="排行" />

    <LinearLayout
        style="@style/_Dsl_TabSlidingItemStyle"
        android:orientation="horizontal">

        <TextView
            style="@style/_Dsl_TabSlidingItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="组合" />


        <TextView
            style="@style/_Dsl_TabSlidingItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="Swift" />

    </LinearLayout>

    <TextView
        style="@style/_Dsl_TabSlidingItemStyle"
        android:text="Vue" />

    <TextView
        style="@style/_Dsl_TabSlidingItemStyle"
        android:text="前->端" />

    <TextView
        style="@style/_Dsl_TabSlidingItemStyle"
        android:text="设计" />

    <TextView
        style="@style/_Dsl_TabSlidingItemStyle"
        android:text="其他资源" />

</com.box.other.tablayout.DslTabLayout>