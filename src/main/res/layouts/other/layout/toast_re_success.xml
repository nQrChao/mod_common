<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_fuli_dialog"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/idp_10"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/idp_25">

        <ImageView
            android:layout_width="@dimen/idp_20"
            android:layout_height="@dimen/idp_20"
            android:src="@drawable/mod_ic_fire" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/idp_5"
            android:text="+"
            android:textColor="#FFF105"
            android:textSize="@dimen/isp_15"
            android:textStyle="bold"
            tools:text="+" />

        <TextView
            android:id="@android:id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/idp_2"
            android:textColor="#FFF105"
            android:textSize="@dimen/isp_15"
            android:textStyle="bold"
            tools:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热度"
            android:layout_marginStart="@dimen/idp_2"
            android:textColor="#FFF105"
            android:textSize="@dimen/isp_15"
            android:textStyle="bold"
            tools:text="热度" />

    </LinearLayout>


</LinearLayout>