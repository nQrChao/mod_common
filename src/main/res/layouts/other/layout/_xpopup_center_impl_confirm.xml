<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="1"
        android:paddingBottom="@dimen/idp_5"
        android:textColor="@color/_xpopup_title_color"
        android:textSize="@dimen/isp_20" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/idp_10"
            android:paddingBottom="@dimen/idp_15">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="@dimen/idp_20"
                android:paddingBottom="@dimen/idp_5"
                android:text=""
                android:textColor="@color/_xpopup_content_color"
                android:textSize="@dimen/isp_15" />

            <EditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/idp_20"
                android:textColor="@color/_xpopup_content_color"
                android:textColorHint="#999999"
                android:textSize="@dimen/isp_15"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <View
        android:id="@+id/xpopup_divider1"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/_xpopup_list_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/idp_50"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingVertical="@dimen/idp_10"
            android:text="@string/xpopup_cancel"
            android:textColor="#666666"
            android:textSize="@dimen/isp_15" />

        <View
            android:id="@+id/xpopup_divider2"
            android:layout_width="@dimen/idp_0_5"
            android:layout_height="match_parent"
            android:background="@color/_xpopup_list_divider" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingVertical="@dimen/idp_10"
            android:text="@string/xpopup_ok"
            android:textSize="@dimen/isp_15" />
    </LinearLayout>
</LinearLayout>