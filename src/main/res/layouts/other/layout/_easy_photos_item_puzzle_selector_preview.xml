<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/idp_15"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/idp_28"
        android:layout_height="@dimen/idp_28"
        android:padding="@dimen/idp_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/easy_photos_ic_delete" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/idp_15"
        android:gravity="center"
        android:paddingStart="@dimen/idp_8"
        android:paddingTop="@dimen/idp_3"
        android:paddingEnd="@dimen/idp_8"
        android:paddingBottom="@dimen/idp_3"
        android:shadowColor="@color/easy_photos_bar_primary"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1.2"
        android:text="@string/gif_easy_photos"
        android:textColor="@color/easy_photos_fg_primary"
        android:textSize="@dimen/isp_12"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>