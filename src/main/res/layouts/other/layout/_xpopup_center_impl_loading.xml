<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/idp_34"
    android:paddingVertical="@dimen/idp_32">

    <ProgressBar
        android:id="@+id/loadProgress"
        android:layout_width="@dimen/idp_35"
        android:layout_height="@dimen/idp_35"
        android:visibility="gone" />

    <com.chaoji.other.xpopup.widget.LoadingView
        android:id="@+id/loadview"
        android:layout_width="@dimen/idp_35"
        android:layout_height="@dimen/idp_35" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/idp_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/idp_12"
        android:text="  "
        android:textColor="#EEEEEE"
        android:textSize="@dimen/isp_13"
        android:visibility="gone" />
</LinearLayout>

