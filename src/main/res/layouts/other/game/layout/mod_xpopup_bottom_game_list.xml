<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/topPic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/idp_295"
                android:scaleType="fitCenter"
                android:src="@drawable/mod_game_list_top_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/lingqu"
                android:layout_width="@dimen/idp_130"
                android:layout_height="@dimen/idp_35"
                android:layout_centerHorizontal="true"
                android:background="@drawable/mod_button_game_list_top_selector"
                android:text="立即领取"
                android:textColor="#FC4776"
                android:textSize="@dimen/isp_16"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.757" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/idp_35"
                android:layout_height="@dimen/idp_35"
                android:layout_marginStart="@dimen/idp_8"
                android:layout_marginTop="@dimen/idp_10"
                android:background="@drawable/a_rounded_999_bfffffff"
                android:padding="@dimen/idp_8"
                android:src="@drawable/arrows_left_b_ic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#EF3F75" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mod_game_list_top_bg_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/bottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/idp_10"
            android:paddingBottom="@dimen/idp_15">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/idp_40"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hornView"
                    android:layout_width="@dimen/idp_18"
                    android:layout_height="@dimen/idp_18"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/horn_ic" />

                <com.box.common.ui.widget.marqueeview.MarqueeView
                    android:id="@+id/marqueeview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/idp_10"
                    android:background="@drawable/a_rounded_25_game_title_b"
                    android:ellipsize="marquee"
                    android:paddingHorizontal="@dimen/idp_10"
                    android:singleLine="true"
                    app:mvAnimDuration="2000"
                    app:mvDirection="right_to_left"
                    app:mvInterval="5000"
                    app:mvSingleLine="true"
                    app:mvTextSize="@dimen/isp_13" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/idp_10"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:itemCount="2"
                tools:listitem="@layout/mod_item_game_list" />
        </LinearLayout>


    </LinearLayout>
</layout>