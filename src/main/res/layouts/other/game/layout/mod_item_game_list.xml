<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="gameApplet"
            type="com.chaoji.im.data.model.ModGameAppletsInfo" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_selector"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/idp_5"
        android:paddingVertical="@dimen/idp_5">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/idp_65"
            android:layout_height="@dimen/idp_65"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loadRoundSizeImage="@{gameApplet.gameIcon}"
            tools:src="@drawable/user_info_ic_1" />

        <TextView
            android:id="@+id/game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/idp_10"
            android:ellipsize="end"
            android:maxLength="5"
            android:maxLines="1"
            android:text="@{gameApplet.gameName}"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/isp_16"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="@id/icon"
            tools:text="拯救小宇宙" />

        <TextView
            android:id="@+id/game_zhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/idp_10"
            android:background="@drawable/a_rounded_20_game_title_a"
            android:ellipsize="end"
            android:maxLength="5"
            tools:text="0.1折"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/idp_10"
            android:paddingVertical="@dimen/idp_2"
            android:text="@{gameApplet.discount_str}"
            android:textColor="@color/white"
            android:textSize="@dimen/isp_14"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/play"
            app:layout_constraintTop_toTopOf="@id/game_name" />

        <TextView
            android:id="@+id/game_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/idp_3"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#A0A0A0"
            android:text="@{gameApplet.genre_str}"
            android:textSize="@dimen/isp_12"
            app:layout_constraintStart_toStartOf="@id/game_name"
            app:layout_constraintTop_toBottomOf="@id/game_name"
            tools:text="放置·动漫" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_name"
            android:layout_marginStart="@dimen/idp_8"
            android:layout_toEndOf="@id/game_type1"
            android:ellipsize="end"
            android:maxLength="12"
            android:maxLines="1"
            android:text="@{gameApplet.vip_label}"
            android:textColor="#A0A0A0"
            android:textSize="@dimen/isp_12"
            app:layout_constraintStart_toEndOf="@id/game_type1"
            app:layout_constraintTop_toTopOf="@id/game_type1"
            tools:text="0.1折可送战姬" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/idp_3"
            android:background="@drawable/a_rounded_5_game_title_d"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/idp_5"
            android:paddingVertical="@dimen/idp_3"
            android:text="@{gameApplet.pingtaibi_str}"
            android:textColor="#FF628B"
            android:textSize="@dimen/isp_12"
            app:layout_constraintStart_toStartOf="@id/game_type1"
            app:layout_constraintTop_toBottomOf="@id/game_type1"
            tools:text="最高可抵充值2000元" />

        <Button
            android:id="@+id/play"
            android:layout_width="@dimen/idp_90"
            android:layout_height="@dimen/idp_35"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/mod_bg_game_list_btn_a"
            android:paddingHorizontal="@dimen/idp_25"
            android:text="去玩"
            android:textColor="@color/white"
            android:textSize="@dimen/isp_15"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>