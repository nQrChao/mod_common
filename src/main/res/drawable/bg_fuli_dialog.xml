<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充的颜色 100% — FF
95% — F2
90% — E6
85% — D9
80% — CC
75% — BF
70% — B3
65% — A6
60% — 99
55% — 8C
50% — 80
45% — 73
40% — 66
35% — 59
30% — 4D
25% — 40
20% — 33
15% — 26
10% — 1A
5% — 0D
0% — 00-->
    <solid android:color="#1A1A1A" />
    <!--设置渐变-->
    <gradient
        android:useLevel="false"
        android:gradientRadius="@dimen/idp_180"
        android:centerX="0.5"
        android:centerY="0.5"
        android:type="radial"
        android:angle="90"
        android:endColor="#1A1A1A"
        android:startColor="#1A1A1A" />
    <!--angle控制渐变的方向-->
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->

    <corners android:radius="@dimen/idp_10" />
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />
</shape>